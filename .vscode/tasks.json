{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make BMP Native",
            "type": "shell",
            "group": "build",
            "command": "make ",
            "options": { "cwd": "${workspaceFolder}/src"},
            "problemMatcher": "$gcc"
        },
        {
            "label": "Make BlackSTLink",
            "type": "shell",
            "group": "build",
            "command": "mingw32-make.exe ",
            "args": [
                "PROBE_HOST=stlinkv2",
                "CC=gcc",
                "OPT_FLAGS=-IC:\\mingw64\\mingw32\\include -LC:\\libusb\\MinGW64\\static -Og -g"
            ],
            "options": { "cwd": "${workspaceFolder}/src"},
            "problemMatcher": "$gcc"
        },
        {
            "label": "Make WDBP",
            "type": "shell",
            "group": "build",
            "command": "make ",
            "args": [
                "PROBE_HOST=WDBP"
            ],
            "options": { "cwd": "${workspaceFolder}/src"},
            "problemMatcher": "$gcc"
        },
        {
            "label": "Clean",
            "type": "shell",
            "group": "build",
            "command": "make ",
            "args": [
                "clean"
            ],
            "options": { "cwd": "${workspaceFolder}/src"},
            "problemMatcher": "$gcc"
        }

    ]
}